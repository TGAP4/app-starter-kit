{
  "name": "vite-react-typescript-starter",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"nodemon -w src/server -x tsx src/server/server.ts\" \"bun run codegen\"",
"start": "echo 'Generating Prisma Client...' && bun run prisma generate || echo 'Failed to generate Prisma Client.' && sleep 5 && echo 'Setting NODE_ENV to production...' && export NODE_ENV=production && echo 'Starting server...' && bun src/server/server.ts",
    "build": "vite build",
    "codegen": "nodemon -w src/server -e ts,js -x graphql-codegen",
    "migrate": "prisma migrate dev"
  },
  "dependencies": {
    "@pothos/core": "^3.41.1",
    "@pothos/plugin-prisma": "^3.65.2",
    "@prisma/client": "^5.15.0",
    "concurrently": "^8.2.2",
    "express": "^4.18.2",
    "graphql": "^16.8.1",
    "graphql-yoga": "^5.3.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsx": "^4.3.0",
    "typescript": "^5.3.2",
    "vite-express": "*"
  },
  "devDependencies": {
    "@0no-co/graphqlsp": "^1.12.9",
    "@graphql-codegen/cli": "5.0.2",
    "@graphql-codegen/client-preset": "4.3.0",
    "@parcel/watcher": "^2.4.1",
    "@types/express": "^4.17.21",
    "@types/node": "^20.9.3",
    "@types/react": "^18.0.38",
    "@types/react-dom": "^18.2.16",
    "@vitejs/plugin-react": "^4.2.0",
    "nodemon": "^3.0.1",
    "prisma": "^5.15.0",
    "ts-node": "^10.9.2",
    "vite": "^5.0.2"
  }
}